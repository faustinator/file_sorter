<Window x:Class="file_sorter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:file_sorter"
        mc:Ignorable="d"
        Title="My File Sorter" Height="450" Width="800">
    <StackPanel Margin="2
                0">
        <Button Margin="20,20,20,10" x:Name="sort_button" Click="sort_button_click">Start Sorting</Button>
        <Label Margin="20,0,20,0" Background="#FFE08A8A">Enter Search Pattern</Label>
        <TextBox Margin="20,0,20,10" Background="#FFDAB1B1" BorderBrush="#FF1B1B1B"></TextBox>
        <Label Margin="20,0,20,10" Height="200" Background="#FFF9F7F7" BorderBrush="Black" BorderThickness="2,2,2,2"></Label>
        
        

    </StackPanel>
</Window>
